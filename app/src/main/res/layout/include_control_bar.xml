<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:layout_margin="@dimen/margin_small"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_control_bar_cover"
        android:layout_width="@dimen/element_touch_width_small"
        android:layout_height="@dimen/element_touch_width_small"
        android:layout_gravity="center_vertical"
        tools:src="@mipmap/ic_launcher_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_control_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_small"
            android:textColor="@color/control_bar_title"
            android:textSize="@dimen/abc_text_size_title_material_toolbar" />

        <TextView
            android:id="@+id/tv_control_bar_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/control_bar_subtitle"
            android:textSize="@dimen/abc_text_size_subtitle_material_toolbar" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_control_bar_play"
        android:layout_width="@dimen/element_touch_width_small"
        android:layout_height="@dimen/element_touch_width_small"
        android:layout_gravity="center_vertical"
        tools:src="@mipmap/ic_launcher_default" />
</LinearLayout>