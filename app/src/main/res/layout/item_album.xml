<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="288dp">

    <ImageView
        android:id="@+id/img_item_album_cover"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/ll_item_album_text_bg"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/img_item_album_cover">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small">

            <TextView
                android:id="@+id/tv_item_album_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/abc_text_size_title_material_toolbar"
                tools:text="title" />

            <TextView
                android:id="@+id/tv_item_album_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                tools:text="subtitle" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>